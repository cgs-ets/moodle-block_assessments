{{!
    @template block_assessments/content

    My Day (Timetable) block content template.
}}

<div class="root" data-region="block_assessments-instance-{{instanceid}}" data-toggle="{{toggle}}">
    {{#schedule}}
        <a href="#" class="block_assessments_toggle" data-placement="right" data-toggle="tooltip" data-original-title="Toggle visibility">
          <i class="toggle-show fa fa-eye" aria-hidden="true"></i>
          <i class="toggle-hide fa fa-eye-slash" aria-hidden="true"></i>
        </a>
        <div class="schedule">
          <a target="_blank" class="btn-print" title="" href="{{printurl}}" data-placement="right" data-toggle="tooltip" data-original-title="Print preview"><i class="fa fa-print" aria-hidden="true"></i></a>
          {{#semesters}}
              <div class="semester">
              {{#terms}}
                  <h5>Term {{term}}</h5>
                  <table class="assessments">
                      {{#assessments}}
                          <tr class="assessment" data-eventorder="{{eventorder}}">
                              <td class="classcode">
                                  {{#url}}<a class="classinfo" href="{{url}}">{{/url}}
                                      <span class="classdesc" {{#altdescription}}title="{{altdescription}}"{{/altdescription}}>
                                          {{#altdescription}}{{altdescription}}{{/altdescription}}{{^altdescription}}{{classcode}}{{/altdescription}}
                                      </span>
                                  {{#url}}</a>{{/url}}
                              </td>
                              <td class="date">{{date}} (W{{week}})</td>
                              <!--<td class="title1">{{title1}}</td>-->
                              <td class="title2">{{title2}}</td>
                          </tr>
                      {{/assessments}}
                  </table>
              {{/terms}}
              </div>
          {{/semesters}}
        </div>
    {{/schedule}}
</div>