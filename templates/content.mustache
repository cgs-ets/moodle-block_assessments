{{!
    @template block_assessments/content

    My Day (Timetable) block content template.
}}

<div class="day times {{role}} {{^fromws}}isloading{{/fromws}} {{#hide}}timetable-minimised{{/hide}}{{^hide}}timetable-maximised{{/hide}}" data-region="block_assessments-instance-{{instanceid}}" data-num-periods="{{numperiods}}" data-num-breaks="{{numbreaks}}" data-timetableday="{{day}}" data-timetabledate="{{date}}" data-timetableuser="{{user}}" data-timetablerole="{{role}}">
    <div class="timetable-controls">
        {{^hide}}{{^termfinished}}<span class="timetable-term">Term {{termnumber}} Week {{termweek}} {{#termday}}Day {{termday}}{{/termday}}</span>{{/termfinished}}{{/hide}}
        <span class="spinner"><span class="circle spin"></span></span>
        <span class="timetable-title">{{#hide}}{{title}}{{/hide}}{{^hide}}{{day}}{{/hide}}</span>
        <a href="#" class="timetable-prev" title="Previous Day"><i class="icon fa fa-chevron-left icon-large" aria-hidden="true" aria-label="Prev"></i></a>
        <a href="#" class="timetable-next" title="Next Day"><i class="icon fa fa-chevron-right icon-large" aria-hidden="true" aria-label="Next"></i></a>
        <a href="#" class="timetable-visible" title="Show timetable"><i class="icon fa fa-eye" aria-hidden="true" aria-label="Hide"></i></a>
        <a href="#" class="timetable-invisible" title="Hide timetable"><i class="icon fa fa-eye-slash" aria-hidden="true" aria-label="Show"></i></a>
    </div>
    {{#periods}}
        <div data-period="{{period}}" class="period {{progressstatus}} {{extrahtmlclasses}}">
            <a class="classinfo" {{#courselink}}href="{{courselink}}"{{/courselink}} title="{{classdescription}} {{starttime}} - {{endtime}} {{room}}" {{#classcolor}}style="background-color:{{classcolor}};"{{/classcolor}}>
                <span class="classdesc">
                    {{#altdescription}}{{altdescription}}{{/altdescription}}{{^altdescription}}{{classdescription}}{{/altdescription}}
                    {{#isstaff}}<span class="classcode">{{classcode}}</span>{{/isstaff}}
                </span>
                <span class="time">{{starttime}}</span>
                {{#room}}
                    <span class="room">{{room}}</span>
                {{/room}}
                {{#isstudent}}{{#teacherphoto}}<span class="teacherphoto"><img src="{{teacherphoto}}" /></span>{{/teacherphoto}}{{/isstudent}}
            </a>
            {{#showprogressbar}}<div class="progress-track"><div class="progress-bar" style="width:{{progressamount}}%;"></div></div>{{/showprogressbar}}
        </div>
    {{/periods}}    
</div>